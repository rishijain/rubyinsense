.row
  .col-lg-3
  .col-lg-6
    .well
      %legend= title
      = simple_form_for [@question, @answer], defaults: {input_html: { class: "form-control"}} do |f|
        = f.input :statement, :required => true, :as => :text, label: '', :input_html => { :rows => 10, :columns => 100 }
        %br
        = f.submit btn, class: 'btn btn-success'
        = link_to 'Back to Question', question_path(@answer.question), class: 'btn btn-default'
