- content_for :signed_in_options do
  .nav.pull-right
  %ul.nav.pull-right
    %li
      = render "questions/image"
    %li
      %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
        = current_user.try(:email) || 'Options' 
        %b.caret
      %ul.dropdown-menu
        %li
          %a{:href => root_path} Questions
        %li
          %a{:href => my_questions_questions_path} My Questions
        %li
          %a{:href => new_question_path} Add a Question
        %li
          %a{:href => edit_user_registration_path} My Profile
        %li.divider
        %li
          = link_to 'Log Out', destroy_user_session_path, method: :delete
  :javascript
    $('.dropdown-toggle').dropdown();

- content_for :signed_out_options do
  %ul.nav.pull-right
    %li 
      = link_to 'Sign In with Twitter', '/auth/twitter?x_auth_access_type=read'
      

%html
  %head
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tags
    .navbar.navbar-inverse.navbar-fixed-top.box
      .navbar-inner
        - if user_signed_in?
          = yield :signed_in_options
        - else
          = yield :signed_out_options
    %span
      .icon-bookmark.custom.bar
    .title
      = link_to root_path do
        RubyInsense
  %br
  %br
  %body
    .container
      = flash[:notice]
      = yield(:box)
      = yield
