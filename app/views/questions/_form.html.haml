.row
  .col-lg-3
  .col-lg-6
    .well
      %legend= title
      = simple_form_for @question, defaults: {input_html: { class: "form-control"}} do |f|
        = f.input :statement, :required => true, :as => :text, :input_html => { :rows => 10, :columns => 100 }
        = f.input :rating, collection: (0..5).to_a, default: 0
        %br
        = f.submit btn, class: "btn btn-success"
